<% layout('./layout/boilerplate') %>
  <div id="cluster-map" class="mb-3"></div>

  <ul>
    <% for (let camp of camps){ %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <% if (camp.image.length){ %>
              <img crossorigin="anonymous" src="<%= camp.image[0].url %>" class="img-fluid w-100 indexImage" alt="camp image">
            <% } else {%>
              <img
                crossorigin="anonymous"
                src="https://res.cloudinary.com/dx8eansli/image/upload/v1725392810/YelpCamp/t0zdjxd0m7elpbl1spko.jpg"
                class="img-fluid" alt="camp image">
            <% } %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">
                <%= camp.title %>
              </h5>
              <p class="card-text">
                <%= camp.description %>
              </p>
              <p class="card-text"><small class="text-muted">
                  <%= camp.location %>
              </small></p>
              <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </ul>
  <script>
    const mapToken = "<%- process.env.MAPTILER_API_KEY %>";
    // const camps = JSON.parse('{"features": <%- JSON.stringify(camps) %>}')
    const camps = { features: <%- JSON.stringify(camps) %>}

  </script>
  <script src="/js/clusterMap.js"></script>